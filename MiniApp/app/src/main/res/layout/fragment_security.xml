<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:context=".security.SecurityFragment">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/txt_security_01"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    tools:text="01025634444" />

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    app:srcCompat="@drawable/ic_arrow_forward_black_24dp" />

                <TextView
                    android:id="@+id/txt_security_02"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    tools:text="dnkaslshdkslhdkshdlskhskl" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_security_03"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    tools:text="dnkaslshdkslhdkshdlskhskl" />

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    app:srcCompat="@drawable/ic_arrow_forward_black_24dp" />

                <TextView
                    android:id="@+id/txt_security_04"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    tools:text="01025634444" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <Button
                    android:id="@+id/btn_aes_encryption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="AES 암호화" />

                <Button
                    android:id="@+id/btn_aes_decryption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="AES 복호화" />

                <Button
                    android:id="@+id/btn_rsa_encryption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="RSA 암호화" />

                <Button
                    android:id="@+id/btn_rsa_decryption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="RSA 복호화" />

            </LinearLayout>
        </LinearLayout>

    </ScrollView>
</layout>